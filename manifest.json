{
  "manifest_version": 2,
  "name": "Vikidia Addons",
  "description": "Un addon pour améliorer l'expérience sur Vikidia",
  "version": "1.0",
  "permissions": [
    "tabs",
    "notifications",
    "http://*.vikidia.org/*",
    "https://*.vikidia.org/*"
  ],
  "browser_action": {
    "default_icon": "images/icon.png",
    "default_popup": "popup.html"
  },
  "icons": {
    "Vikidia": "images/icon_Vikidia.png"
  },
  "content_scripts": [
    {
      "matches": ["*://*.vikidia.org/*"],
      "js": ["inject.js"]
    }
  ]
}
